<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/framelaout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="20dp">

        <com.boylab.library.SmartSpinner
            android:id="@+id/smart_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/ic_text_selector"
            android:textSize="20sp"
            app:arrowDrawable="@drawable/smart_arrow_ds15"
            app:arrowTint="@android:color/darker_gray"
            app:entries="@array/array_PhotoCamera"
            app:itemHeight="50dp"
            app:itemWith="160dp"
            app:numColumns="2" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelaout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/framelaout1"
        android:background="@color/colorAccent"
        android:padding="20dp">

        <Button
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:text="点击" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/framelaout2" />

</RelativeLayout>