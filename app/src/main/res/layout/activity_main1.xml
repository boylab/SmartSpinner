<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boylab.example.MainActivity">

    <com.boylab.smartspinner.SmartSpinner
        android:id="@+id/smart_Spinner01"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/ds15_arrow"
        android:textSize="20sp" />


    <com.boylab.smartspinner.SmartSpinner
        android:id="@+id/smart_Spinner02"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@+id/smart_Spinner01"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_text_selector"
        android:textSize="20sp" />

    <com.boylab.smartspinner.SmartSpinner
        android:id="@+id/smart_Spinner03"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@+id/smart_Spinner02"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_text_selector"
        android:textSize="20sp" />

    <com.boylab.smartspinner.twowayview.widget.TwoWayView
        android:id="@+id/twoWayView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

</RelativeLayout>